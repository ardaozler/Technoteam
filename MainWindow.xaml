<Window x:Class="Technoteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technoteam"
        mc:Ignorable="d"
        Title="Technoteam WPF Demo" SizeToContent="WidthAndHeight" Height="600" Width="800" FontFamily="Microsoft YaHei" FontSize="24">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Border Background="AntiqueWhite" Padding="20" CornerRadius="10" Grid.Row="1" Grid.Column="1">
                <StackPanel Grid.Column ="1" Grid.Row="1" Margin="20">
                    <TextBlock Text="PLC 1" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TempLabel1" Text="Temperature (°C)"/>
                    <ProgressBar x:Name="TempBar1" Height="20" Maximum="150" Margin="0,10,0,5"/>
                    <TextBlock x:Name="TempValue1" FontSize="18" Text="0 °C"/>

                    <TextBlock x:Name="ActualSpeedLabel1" Text="Actual Speed"/>
                    <ProgressBar x:Name="ActualSpeedBar1" Height="20" Maximum="2000" Margin="0,10,0,5"/>
                    <TextBlock x:Name="ActualSpeedValue1" FontSize="18" Text="0 RPM"/>

                    <TextBlock x:Name="TargetSpeedLabel1" FontSize="18" Text="Target Speed"/>
                    <Slider x:Name="TargetSpeedSlider1" Minimum="0" Maximum="2000" Value="0" TickFrequency="100" IsSnapToTickEnabled="True" Margin="0,10,0,5"/>
                    <TextBlock x:Name="TargetSpeedValue1" FontSize="18" Text="0 RPM"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Ellipse x:Name="StatusLight1" Width="30" Height="30" Fill="Gray" Stroke="Black" StrokeThickness="2" Margin="0,0,10,0"/>
                        <TextBlock x:Name="StatusLabel1" Text="Normal"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button x:Name="StartButton1" Content="Start" Width="100" Height="40" Margin="0,0,10,0"/>
                        <Button x:Name="EmergencyStopButton1" Content="Emergency Stop" Background="Red"  Width="200" Height="40"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
