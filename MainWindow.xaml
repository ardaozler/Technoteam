<Window x:Class="Technoteam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Technoteam"
        mc:Ignorable="d"
        Title="Technoteam WPF Demo" Height="Auto" Width="Auto" FontFamily="Microsoft YaHei" FontSize="24">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem Header="Dashboard">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="PlcPanelHost" Width="Auto">
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Configuration">
                <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Number of PLCs" Margin="0,0,20,5"/>
                        <TextBox x:Name="PlcCountTextBox"
                                 Width="80"
                                 Text="4"
                                 Margin="0,0,10,0"/>
                        <Button x:Name="ApplyPlcCountButton"
                                Content="Apply"
                                Width="100"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Default Target RPM for all PLCs" Margin="0,0,20,5"/>
                        <TextBox x:Name="DefaultRpmTextBox"
                                 Width="80"
                                 Text="1000"
                                 Margin="0,0,10,0"/>
                        <Button x:Name="ApplyDefaultRpmButton"
                                Content="Apply"
                                Width="150"/>
                    </StackPanel>

                    <TextBlock Text="(Changes will affect running PLCs immediately)" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <Button x:Name="StopAllButton" Grid.Row="1" Grid.Column="1" Content="STOP ALL" Width="150" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,10" Background="Red" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
